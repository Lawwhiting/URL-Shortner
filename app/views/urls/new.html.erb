<div class="container">

  <bold><h1>Lil' Buddies</h1></bold>
  <h4>Your friendly Url cuttery!</h4>

  <div id="cloud-intro">

    <%= form_for @shortened_url do |form| %>

    <p>
      <%= form.label :url, "Long URL:" %>
      <%= form.text_field :url %>
    </p>

    <% if @shortened_url.errors[:url].any? %>
    <p class='error-messages'>
      The given url <%= @shortened_url.errors[:url].to_sentence %>.
    </p>
    <% end %>

    <p class='buttons'>
      <%= form.submit "Shorten my URL" %>
    </p>
  </div>
</div>
<% end %>
